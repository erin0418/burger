<h1>Let's Plan A Wedding!</h1>

<h2>Checklist Items To Complete</h2>

<ul>
  {{#each items}}
    {{#unless done}}
      {{done=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>One less thing to worry about!</h2>

<ul>
  {{#each items}}
    {{#if done}}
      {{done=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Another Item to the List</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Item Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Done yet?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Done!<br>
    <input type="radio" name="sleepy" value="0"> Not Yet
  </div>

  <button type="submit">Add Item</button>
</form>